  <script>
    // small helpers
    document.getElementById('year').textContent = new Date().getFullYear();

    // Mobile menu (very small)
    const menuBtn = document.getElementById('menuBtn');
    menuBtn.addEventListener('click', ()=>{
      const nav = document.querySelector('nav');
      const expanded = menuBtn.getAttribute('aria-expanded') === 'true';
      menuBtn.setAttribute('aria-expanded', String(!expanded));
      nav.style.display = expanded ? 'none' : 'flex';
    });

    // Products data
    const products = {
      1: {
        title: "트렌디 스낵 박스",
        desc: "SNS에 잘 어울리는 감성 스낵 박스. 소량 생산 테스트용.",
        img: "https://images.unsplash.com/photo-1542293787938-c9e299b8804d?q=80&w=1200&auto=format&fit=crop&ixlib=rb-4.0.3&s=3af5aa4b3c7c2a2e7f2a86fc0b4e8a6f",
        more: "가격, 최소주문수량(MOQ), 배송옵션 등 자세한 정보는 문의주세요."
      },
      2: {
        title: "티백 시그니처",
        desc: "감성 포장 티백 — 감잎, 우엉, 진피 등 로컬 원료 사용.",
        img: "https://images.unsplash.com/photo-1526178611705-0943e2b8260b?q=80&w=1200&auto=format&fit=crop&ixlib=rb-4.0.3&s=0d9c0f3f0b7f8c4f2b6b2b5c24f6a8b9",
        more: "샘플 제작, 선물세트 구성, 도매 공급 가능. 샘플 요청 환영."
      },
      3: {
        title: "무자본 무역 가이드",
        desc: "초보자가 무자본으로 시작하는 기본 루트 정리(교육/컨설팅용).",
        img: "https://images.unsplash.com/photo-1491553895911-0055eca6402d?q=80&w=1200&auto=format&fit=crop&ixlib=rb-4.0.3&s=9b6a0b1b0f4d5c1e0b1f2a3d4c5e6f7a",
        more: "구체적인 파트너 발굴, 결제/물류 방식, 리스크 관리 등 포함."
      }
    };

    const modalBackdrop = document.getElementById('modalBackdrop');
    const modalBody = document.getElementById('modalBody');

    function openModal(id){
      const p = products[id];
      modalBody.innerHTML = `
        <img src="${p.img}" alt="${p.title}">
        <h3 style="margin:12px 0 6px">${p.title}</h3>
        <p class="muted">${p.desc}</p>
        <p style="margin-top:8px">${p.more}</p>
        <div style="margin-top:12px;display:flex;gap:8px">
          <a class="cta" href="mailto:hello@example.com?subject=${encodeURIComponent('제품문의: '+p.title)}">메일로 문의</a>
          <button class="close-btn" onclick="closeModal()">닫기</button>
        </div>
      `;
      modalBackdrop.style.display = 'flex';
      modalBackdrop.setAttribute('aria-hidden','false');
      // trap focus: simple approach
      document.querySelector('.modal').focus();
    }
    function closeModal(){
      modalBackdrop.style.display = 'none';
      modalBackdrop.setAttribute('aria-hidden','true');
    }
    modalBackdrop.addEventListener('click', (e)=>{ if(e.target===modalBackdrop) closeModal(); });
    window.addEventListener('keydown', (e)=>{ if(e.key==='Escape') closeModal(); });

    // contact submit (mailto fallback)
    function submitContact(e){
      e.preventDefault();
      const name = document.getElementById('name').value.trim();
      const email = document.getElementById('email').value.trim();
      const message = document.getElementById('message').value.trim();
      const subject = encodeURIComponent(`[문의] ${name}`);
      const body = encodeURIComponent(`이름: ${name}\n이메일: ${email}\n\n${message}`);
      // mailto fallback
      window.location.href = `mailto:hello@example.com?subject=${subject}&body=${body}`;
    }

    // copy email helper
    function copyEmail(){
      navigator.clipboard?.writeText('hello@example.com')
        .then(()=> alert('이메일이 클립보드에 복사되었습니다: hello@example.com'))
        .catch(()=> prompt('이메일 주소를 복사하세요', 'hello@example.com'));
    }
  </script>
</body>
